<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_AddTT"
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:text="Nhập thông tin sản phẩm"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="#2196F3"/>
        <ImageButton
            android:id="@+id/imbExit"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/baseline_assignment_return_24"
            android:background="#2196F3"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/tvMaSp"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Nhập mã sản phẩm: "
            android:textSize="24sp"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/edMaSp"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:textSize="24sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/tvTenSp"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Nhập tên sản phẩm: "
            android:textSize="24sp"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/edTenSp"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:textSize="24sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/tvGiaSp"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Nhập giá sản phẩm: "
            android:textSize="24sp"
            android:textColor="@color/black"

            />
        <EditText
            android:id="@+id/edGiaSp"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:textSize="24sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:gravity="end"
        android:layout_marginRight="10dp">
        <Button
            android:id="@+id/btnSave"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:textSize="26sp"
            android:background="#2196F3"
            />
        <Button
            android:id="@+id/btnExit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Thoát"
            android:textSize="26sp"
            android:background="#2196F3"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>

</LinearLayout>